# Firebase Configuration
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Twilio Configuration (optional - use mock mode for demo)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1415XXXXXXX

# Google Maps API Key (optional - falls back to OpenStreetMap)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mock Mode (set to true for hackathon demo without real API keys)
MOCK_MESSAGING=true

# Firebase Functions Configuration
FUNCTIONS_EMULATOR_HOST=localhost
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099